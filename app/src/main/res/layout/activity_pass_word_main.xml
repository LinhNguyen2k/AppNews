<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Nhập mật khẩu"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_passWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_one"
                    style="@style/define_textView"
                    android:text="1" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_two"
                    style="@style/define_textView"
                    android:text="2" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_three"
                    style="@style/define_textView"
                    android:text="3" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_four"
                    style="@style/define_textView"
                    android:text="4" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_five"
                    style="@style/define_textView"
                    android:text="5" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_sixe"
                    style="@style/define_textView"
                    android:text="6" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_seven"
                    style="@style/define_textView"
                    android:text="7" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_eight"
                    style="@style/define_textView"
                    android:text="8" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout style="@style/define_LinearLayout">

            <androidx.cardview.widget.CardView
                style="@style/define_CardView"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/tv_nine"
                    style="@style/define_textView"
                    android:text="9" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            style="@style/define_CardView"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/tv_zero"
                style="@style/define_textView"
                android:text="0"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_login_button"
            android:text="Đăng nhập"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/regular"
        android:text="Xóa"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>